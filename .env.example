# ChainHive Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ===========================================
# NODIT API CONFIGURATION
# ===========================================
# Get your API key from https://nodit.io
NODIT_API_KEY=your_nodit_api_key_here
NODIT_BASE_URL=https://web3.nodit.io
NODIT_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/webhooks/telegram

# ===========================================
# WEB3AUTH CONFIGURATION
# ===========================================
# Get your client ID from https://dashboard.web3auth.io
WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here
WEB3AUTH_NETWORK=sapphire_mainnet

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/chainhive

# Redis connection (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# WEBHOOK CONFIGURATION
# ===========================================
WEBHOOK_SECRET=your_webhook_verification_secret
WEBHOOK_TIMEOUT=30000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/chainhive.log

# ===========================================
# BLOCKCHAIN RPC ENDPOINTS (Optional)
# ===========================================
# These are optional - NODIT provides these services
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_project_id
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# ===========================================
# EXTERNAL API KEYS (Optional)
# ===========================================
# CoinGecko API for additional price data
COINGECKO_API_KEY=your_coingecko_api_key

# Etherscan API for additional Ethereum data
ETHERSCAN_API_KEY=your_etherscan_api_key

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_TELEGRAM_BOT=false
ENABLE_WEBHOOKS=true
ENABLE_REAL_TIME_STREAMS=true
ENABLE_AI_INSIGHTS=true
ENABLE_PRICE_ALERTS=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Set to true to enable debug logging
DEBUG=false

# Set to true to use mock data instead of real APIs
USE_MOCK_DATA=false

# Set to true to enable CORS for all origins (development only)
ENABLE_CORS_ALL=true

# ===========================================
# LEGACY KAIROS CONFIGURATION (Deprecated)
# ===========================================
# These are kept for backward compatibility
PRIVATE_KEY=your-private-key
DEPLOYER_ADDRESS=your-wallet-address
KAIROS_RPC_URL=https://public-en-kairos.node.kaia.io
KAIROS_TESTNET_RPC_URL=https://public-en-kairos.node.kaia.io
KAIROS_API_KEY=https://kaia-kairos.blockpi.network/v1/rpc/f531cca99f49c3adf89af4a80f5de55f82da2735
NODIT_KAIROS_RPC_URL=https://kaia-kairos.nodit.io/{{API-KEY}}
VITE_KAIROS_CHAIN_ID=1001
VITE_KAIROS_RPC_URL=https://kairos-testnet.kaichain.net
VITE_KAIROS_EXPLORER_URL=https://kairoscan.io
VITE_CHAINHIVE_CONTRACT_ADDRESS=
VITE_CHAINHIVE_TOKEN_ADDRESS=
VITE_CHAINHIVE_MULTICHAIN_ADDRESS=
VITE_CHAINHIVE_GOVERNANCE_ADDRESS=
VITE_TIMELOCK_CONTROLLER_ADDRESS=
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_API_URL=https://api.pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key